{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext",
    "typeRoots": ["src/@types"] // for ts-node
  },
  "include": ["src/**/*"]
}
