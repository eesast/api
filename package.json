{
  "name": "sast-api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc --outDir build",
    "serve": "cross-env NODE_ENV=production node build/index.js",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" src/index.ts",
    "lint": "eslint --ext .js,.ts src/",
    "typecheck": "tsc --noUnusedLocals --noEmit",
    "prettier": "prettier -c \"src/**/*.{js,ts,json,md}\" --write"
  },
  "dependencies": {
    "bcrypt": "3.0.6",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "express-openapi-validator": "1.4.0",
    "jsonwebtoken": "8.5.1",
    "mkdirp": "0.5.1",
    "mongoose": "5.6.8",
    "morgan": "1.9.1",
    "multer": "1.4.2",
    "typescript": "3.5.3",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.5",
    "@types/debug": "4.1.4",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "8.3.2",
    "@types/mkdirp": "0.5.2",
    "@types/mongoose": "5.5.11",
    "@types/morgan": "1.7.36",
    "@types/multer": "1.3.7",
    "@types/uuid": "3.4.5",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "cross-env": "5.2.0",
    "eslint": "6.1.0",
    "eslint-config-prettier": "6.0.0",
    "husky": "3.0.2",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "ts-node": "8.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn typecheck && yarn prettier"
    }
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "sast-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
