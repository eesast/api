{
  "name": "eesast-api",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "preinstall": "npm config set registry https://registry.npmjs.org && yarn config set registry https://registry.yarnpkg.com",
    "postinstall": "husky",
    "start": "nodemon src/index.ts",
    "debug": "nodemon src/index.ts --debug",
    "build": "tsc",
    "serve": "cross-env NODE_ENV=production node build/index.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit --noUnusedLocals"
  },
  "dependencies": {
    "async-mutex": "0.5.0",
    "axios": "1.12.2",
    "bcrypt": "6.0.0",
    "cors": "2.8.5",
    "cos-nodejs-sdk-v5": "2.15.4",
    "debug": "4.4.3",
    "dockerode": "4.0.8",
    "dotenv": "17.2.2",
    "express": "4.21.2",
    "graphql": "16.11.0",
    "graphql-request": "6.1.0",
    "html-to-text": "9.0.5",
    "isemail": "3.2.0",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "9.0.2",
    "morgan": "1.10.1",
    "node-cron": "4.2.1",
    "nodemailer": "7.0.6",
    "qcloud-cos-sts": "3.1.3",
    "unisms": "0.0.6",
    "web-push": "3.6.7"
  },
  "devDependencies": {
    "@types/bcrypt": "6.0.0",
    "@types/cors": "2.8.19",
    "@types/debug": "4.1.12",
    "@types/dockerode": "3.3.44",
    "@types/express": "4.17.23",
    "@types/html-to-text": "9.0.4",
    "@types/js-yaml": "4.0.9",
    "@types/jsonwebtoken": "9.0.7",
    "@types/morgan": "1.9.10",
    "@types/node": "22.18.8",
    "@types/node-cron": "3.0.11",
    "@types/nodemailer": "7.0.1",
    "@types/web-push": "3.6.4",
    "cross-env": "10.0.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.1",
    "nodemon": "3.1.10",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint"
    ],
    "*.{js,mjs,cjs,ts,json,yml,md}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "eesast-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.test.ts"
    ]
  }
}
