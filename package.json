{
  "name": "sast-api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc --outDir build",
    "serve": "NODE_ENV=production node build/index.js",
    "lint": "tsc --noUnusedLocals --noEmit && prettier -c \"src/**/*\" --write"
  },
  "dependencies": {
    "bcrypt": "3.0.6",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "8.0.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mkdirp": "0.5.1",
    "mongoose": "5.6.4",
    "morgan": "1.9.1",
    "multer": "1.4.1",
    "typescript": "3.5.3",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.5",
    "@types/debug": "4.1.4",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.17.0",
    "@types/helmet": "0.0.43",
    "@types/jsonwebtoken": "8.3.2",
    "@types/mkdirp": "0.5.2",
    "@types/mongoose": "5.5.8",
    "@types/morgan": "1.7.35",
    "@types/multer": "1.3.7",
    "@types/uuid": "3.4.5",
    "husky": "3.0.0",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-eslint-rules": "5.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "sast-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
