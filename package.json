{
  "name": "sast-app-api",
  "version": "2.1.3",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "build": "tsc --outDir build",
    "serve": "NODE_ENV=production node build/index.js",
    "debug": "nodemon --exitcrash --inspect=5858 --exec node -r ts-node/register ./src/index.ts"
  },
  "dependencies": {
    "bcrypt": "^3.0.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.16.0",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.0",
    "mkdirp": "^0.5.1",
    "mongoose": "^5.4.19",
    "morgan": "^1.9.0",
    "multer": "^1.4.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.4",
    "@types/debug": "^4.1.2",
    "@types/express": "^4.16.1",
    "@types/helmet": "^0.0.43",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mkdirp": "^0.5.2",
    "@types/mongoose": "^5.3.22",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/uuid": "^3.4.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "sast-app-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "ts-node src/index.ts"
  }
}
