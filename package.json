{
  "name": "eesast-api",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "nodemon",
    "debug": "nodemon --debug",
    "build": "babel src -d build -x \".ts\" --ignore \"src/@types/**/*\" --source-maps",
    "serve": "cross-env NODE_ENV=production node build/index.js",
    "lint": "eslint --ext .js,.ts src/",
    "typecheck": "tsc --noUnusedLocals"
  },
  "dependencies": {
    "@babel/runtime": "7.13.10",
    "ali-oss": "6.13.2",
    "bcrypt": "5.0.1",
    "cors": "2.8.5",
    "debug": "4.3.1",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "15.5.0",
    "graphql-request": "3.4.0",
    "graphql-tag": "2.11.0",
    "html-to-text": "6.0.0",
    "isemail": "3.2.0",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.11.8",
    "morgan": "1.10.0",
    "node-fetch": "2.6.1",
    "nodemailer": "6.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.10",
    "@babel/core": "7.13.10",
    "@babel/node": "7.13.10",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.13.8",
    "@babel/plugin-proposal-numeric-separator": "7.12.13",
    "@babel/plugin-proposal-object-rest-spread": "7.13.8",
    "@babel/plugin-proposal-optional-chaining": "7.13.8",
    "@babel/plugin-transform-runtime": "7.13.10",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-typescript": "7.13.0",
    "@types/ali-oss": "6.0.7",
    "@types/bcrypt": "3.0.0",
    "@types/cors": "2.8.10",
    "@types/debug": "4.1.5",
    "@types/express": "4.17.11",
    "@types/html-to-text": "6.0.0",
    "@types/jsonwebtoken": "8.5.1",
    "@types/mongodb": "3.6.10",
    "@types/mongoose": "5.10.3",
    "@types/morgan": "1.9.2",
    "@types/node-fetch": "2.5.8",
    "@types/nodemailer": "6.4.0",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "cross-env": "7.0.3",
    "eslint": "7.21.0",
    "eslint-config-prettier": "6.15.0",
    "husky": "4.3.8",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint && yarn typecheck"
    }
  },
  "lint-staged": {
    "{src/**/*,test/**/*}.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "env": {
      "DEBUG": "eesast-api"
    },
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.test.ts"
    ],
    "exec": "babel-node --extensions \".ts\" --config-file \"./.babelrc\" src/index.ts"
  }
}
